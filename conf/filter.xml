<!-- 过滤系统配置信息 -->
<FILTER>
    <!-- 日志配置
        1) LEVLE: 日志级别
        2) PATH: 输出路径
        3) 取值范围: trace|debug|info|warn|error|fatal -->
    <LOG LEVEL="warn" PATH="../log/" />

    <!-- 工作进程: 负责网页分析
         1) NUM: 线程数
         2) PATH: 工作目录 -->
    <WORKER NUM="3" PATH="../../data/filter/" />

    <!-- 爬取配置
         1) DEPTH: 最大爬取深度
         2) PATH: 网页存储路径 -->
    <DOWNLOAD DEPTH="-1" PATH="../../data/crwl/webpage" />

    <!-- 工作队列配置
         COUNT: 队列长度(必须为2的次方) -->
    <WORKQ COUNT="1024" SIZE="0" />

    <!-- 管理服务: 负责对外提供管理服务(如:操作接口 监控信息等)
      1) PORT: 侦听端口 -->
    <MANAGER PORT="9001" />

    <!-- REDIS服务配置 -->
    <REDIS>
        <!-- 队列配置
             TASKQ: UNDO队列 -->
        <TASKQ NAME="CRWL_UNDO_TASKQ" />

        <!-- 哈希表配置
             1) DONE_TAB: 已下载网页表
             2) PUSH_TAB: 已放入过队列的网页(防止重复放入UNDO队列) -->
        <DONE_TAB NAME="CRWL_DONE_TAB" />
        <PUSH_TAB NAME="CRWL_PUSH_TAB" />

        <!-- REDIS网络配置
             ITEM: 第1项为MASTER, 其他项为副本 -->
        <NETWORK>
            <ITEM IP="127.0.0.1" PORT="6379" /> <!-- MASTER配置 -->
        </NETWORK>
    </REDIS>

    <!-- 种子配置(DEPTH: 表示种子的当前深度) -->
    <SEED>
        <ITEM URI="www.baidu.com" DEPTH="0" />
        <ITEM URI="www.ifeng.com" DEPTH="0" />
        <ITEM URI="www.qq.com" DEPTH="0" />
        <ITEM URI="www.163.com" DEPTH="0" />
        <ITEM URI="www.52rd.com" DEPTH="0" />
    </SEED>
</FILTER>
