<!-- 过滤系统配置信息 -->
<FILTER>
    <!-- 公共配置 -->
    <COMMON>
        <!-- 日志信息配置
            1) LEVLE: 日志级别
            2) SYS_LEVEL: 系统日志级别
            3) 取值范围: trace|debug|info|warn|error|fatal -->
        <LOG LEVEL="warn" SYS_LEVEL="error" PATH="../log/" />

        <!-- 爬取配置
             1) DEPTH: 最大爬取深度
             2) PATH: 网页存储路径 -->
        <DOWNLOAD DEPTH="-1" PATH="../data/crwl/webpage" />

        <!-- 工作队列配置 -->
        <WORKQ COUNT="1000" SIZE="0" />

        <!-- 管理服务: 负责对外提供管理服务(如:操作接口 监控信息等)
          1) PORT: 侦听端口 -->
        <MANAGER PORT="8889" />

        <!-- REDIS服务配置
             1) IP: IP地址
             2) PORT: 端口号 -->
        <REDIS IP="127.0.0.1" PORT="6379">
            <!-- 队列配置
                 TASKQ: UNDO队列 -->
            <TASKQ NAME="CRWL_UNDO_TASKQ" />

            <!-- 哈希表配置
                 1) DONE_TAB: 已下载网页表
                 2) PUSH_TAB: 已放入过队列的网页(防止重复放入UNDO队列) -->
            <DONE_TAB NAME="CRWL_DONE_TAB" />
            <PUSH_TAB NAME="CRWL_PUSH_TAB" />

            <!-- 副本配置
                 MAX: 最大有效副本数 -->
            <SLAVE MAX="1">
                <ITEM IP="127.0.0.1" PORT="6380" />
            </SLAVE>
        </REDIS>
    </COMMON>

    <!-- 工作进程: 负责网页分析
         1) NUM: 线程数 -->
    <WORKER NUM="3" />

    <!-- 分析进程: 负责对网页的分析(内容分析、URL提取等) -->
    <FILTER>
        <!-- 被解析网页的存储路径 -->
        <STORE PATH="../data/filter/webpage" ERR_PATH="../data/filter/error" />
        <DATABASE SERVER="服务名" USER="用户名" PASSWD="密码" />  <!-- 数据库配置 -->
    </FILTER>

    <!-- 种子配置(DEPTH: 表示种子的当前深度) -->
    <SEED>
        <ITEM URI="www.baidu.com" DEPTH="0" />
        <ITEM URI="www.ifeng.com" DEPTH="0" />
        <ITEM URI="www.qq.com" DEPTH="0" />
        <ITEM URI="www.163.com" DEPTH="0" />
        <ITEM URI="www.52rd.com" DEPTH="0" />
    </SEED>
</FILTER>
