<!-- 转发器配置 -->
<FRWDER>
    <!-- 日志配置
        1) LEVLE: 日志级别
        2) PATH: 输出路径
        3) 取值范围: trace|debug|info|warn|error|fatal -->
    <LOG LEVEL="error" PATH="../log/" />

    <!-- 至侦听服务的队列 -->
    <TO_LSND PATH="../temp/listend/send.shmq" />

    <!-- 连接倒排服务的配置 -->
    <CONN-INVTD NODE="10001">                   <!-- NODE: 结点ID(必须唯一) -->
        <PATH>../temp/frwd/</PATH>              <!-- PATH: 工作路径 -->
        <SERVER IP="127.0.0.1" PORT="28888" />  <!-- 服务端地址(IP:IP地址 PORT:服务端口) -->
        <AUTH   USR="qifeng" PASSWD="111111" /> <!-- 鉴权配置(USR:用户名 PASSWD:登录密码) -->
        <THDNUM SEND="2" WORK="4" />            <!-- 线程数目(SEND:发送线程 WORK:工作线程) -->
        <BUFF   SEND="5" RECV="5" />            <!-- 缓存配置(SEND:发送缓存(MB) RECV:接收缓存(MB)) -->
        <RECVQ  MAX="4096" SIZE="2048" />       <!-- 接收队列(MAX:总容量 SIZE:单元大小) -->
        <SENDQ  MAX="4096" SIZE="4096" />       <!-- 发送队列(MAX:总容量 SIZE:单元大小) -->
    </CONN-INVTD>
</FRWDER>
