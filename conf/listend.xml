<!-- 代理服务配置信息 -->
<LISTEND NODE="10001">
    <!-- 日志配置
        1) LEVLE: 日志级别
        2) 取值范围: trace|debug|info|warn|error|fatal -->
    <LOG LEVEL="error" />

    <!-- 指定转发配置
         PATH: 转发配置路径
         MARK: 指定转发配置的标签 -->
    <FRWD PATH="../conf/frwder.xml" MARK=".FRWDER.CONN-INVTD" />

    <!-- 代理信息配置 -->
    <AGENT>
        <!-- 并发(连接)配置
            1) MAX: 最大并发数(必须为2的次方)
            2) TIMEOUT: 连接超时时间
            3) PORT: 侦听端口 -->
        <CONNECTIONS MAX="999999" TIMEOUT="15" PORT="9002" />

        <!-- 队列配置
            1) MAX: 队列容量 
            2) SIZE: 队列单元大小(0:表示自定义) -->
        <QUEUE>
            <CONNQ MAX="1024" SIZE="0" />     <!-- 连接队列 -->
            <RECVQ MAX="1024" SIZE="2048" />  <!-- 接收队列 -->
            <SENDQ MAX="1024" SIZE="2048" />  <!-- 发送队列 -->
        </QUEUE>

        <!-- Agent配置
            1) NUM: 线程数 -->
        <AGENT NUM="5" />
        <!-- Worker配置
            1) NUM: 线程数 -->
        <WORKER NUM="3" />
    </AGENT>
</LISTEND>
