<!-- 代理服务配置信息 -->
<LISTEND NAME="SearchEngineListend" WORKDIR="../temp/listend/">
    <!-- 日志配置
        1) LEVLE: 日志级别(取值范围: trace|debug|info|warn|error|fatal) -->
    <LOG LEVEL="error" />

    <!-- 分发队列配置 -->
    <DISTQ NUM="8" MAX="4096" SIZE="4096" />

    <!-- 指定转发配置
         PATH: 转发配置路径
         MARK: 指定转发配置的标签 -->
    <FRWDER PATH="../conf/frwder.xml" MARK=".FRWDER.CONN-INVTD" />

    <!-- 代理信息配置 -->
    <AGENT ID="1001">
        <!-- 并发(连接)配置
            1) MAX: 最大并发数
            2) TIMEOUT: 连接超时时间
            3) PORT: 侦听端口 -->
        <CONNECTIONS MAX="999999" TIMEOUT="15" PORT="9002" />

        <!-- 队列配置
            1) MAX: 队列容量(必须为2的次方)
            2) SIZE: 队列单元大小(0:表示自定义) -->
        <QUEUE>
            <CONNQ MAX="8192" SIZE="0" />     <!-- 连接队列 -->
            <RECVQ MAX="8192" SIZE="4096" />  <!-- 接收队列 -->
            <SENDQ MAX="8192" SIZE="4096" />  <!-- 发送队列 -->
        </QUEUE>

        <!-- 线程池配置
            1) LSN: 侦听线程数
            2) AGENT: 代理线程数
            3) WORKER: 工作线程数 -->
        <THREAD-POOL LSN="2" AGENT="3" WORKER="3" />
    </AGENT>
</LISTEND>
