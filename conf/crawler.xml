<!-- 爬虫系统配置信息 -->
<CRAWLER>
    <!-- 日志配置
        1) LEVLE: 日志级别
        2) 取值范围: trace|debug|info|warn|error|fatal -->
    <LOG LEVEL="warn" />

    <!-- 爬虫进程: 负责网页下载
         1) NUM: 线程数 -->
    <WORKER NUM="3">
        <CONNECTIONS MAX="512" TIMEOUT="15" /> <!-- 爬取网页的并发(连接)数 -->
    </WORKER>

    <!-- 爬取配置
         1) DEPTH: 最大爬取深度
         2) PATH: 网页存储路径 -->
    <DOWNLOAD DEPTH="-1" PATH="../../data/crwl/webpage" />

    <!-- 工作队列配置
         COUNT: 队列长度(必须为2的次方)
         SIZE: 单元大小(0: 默认代码内部设置)-->
    <WORKQ COUNT="1024" SIZE="0" />

    <!-- 管理服务: 负责对外提供管理服务(如:操作接口 监控信息等)
      1) PORT: 侦听端口 -->
    <MANAGER PORT="9000" />

    <!-- REDIS服务配置 -->
    <REDIS>
        <!-- 队列配置
             TASKQ: UNDO队列 -->
        <TASKQ NAME="CRWL_UNDO_TASKQ" />

        <!-- 哈希表配置
             1) DONE_TAB: 已下载网页表
             2) PUSH_TAB: 已放入过队列的网页(防止重复放入UNDO队列) -->
        <DONE_TAB NAME="CRWL_DONE_TAB" />
        <PUSH_TAB NAME="CRWL_PUSH_TAB" />

        <!-- REDIS网络配置
             ITEM: 第1项为MASTER, 其他项为副本 -->
        <NETWORK>
            <ITEM IP="127.0.0.1" PORT="6379" /> <!-- MASTER配置 -->
            <ITEM IP="127.0.0.1" PORT="6380" />
        </NETWORK>
    </REDIS>
</CRAWLER>
