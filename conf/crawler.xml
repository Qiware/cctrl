<!-- 爬虫系统配置信息 -->
<CRAWLER>
    <!-- 公共配置 -->
    <COMMON>
        <!-- 日志信息配置
             1) LEVLE: 日志级别
             2) LEVEL2: 系统日志级别
             3) 取值范围: trace|debug|info|warn|error|fatal -->
        <LOG LEVEL="error" LEVEL2="error" PATH="../log/" />
        <!-- 爬取配置
             1) DEPTH: 最大爬取深度
             2) PATH: 网页存储路径 -->
        <DOWNLOAD DEPTH="-1" PATH="../temp/crwl/webpage" />
        <!-- REDIS服务配置
             1) IP: IP地址
             2) PORT: 端口号 -->
        <REDIS IP="127.0.0.1" PORT="6379">
            <!-- 队列配置
                 1) UNDO_TASKQ: 还未处理的网页队列 -->
            <QUEUE UNDO_TASKQ="CRWL_UNDO_TASKQ" />
            <!-- 哈希表配置
                 1) DONE_TAB: 已下载网页表
                 2) PUSH_TAB: 已放入过队列的网页(防止重复放入UNDO队列) -->
            <HASH DONE_TAB="CRWL_DONE_TAB" PUSH_TAB="CRWL_PUSH_TAB" />
            <SLAVE>   <!-- 副本服务器 -->
                <ITEM IP="127.0.0.1" PORT="6380" />
            </SLAVE>
        </REDIS>
    </COMMON>

    <!-- 爬虫进程: 负责网页下载
         1) NUM: 线程数 -->
    <WORKER NUM="3">
        <CONNECTIONS MAX="256" TIMEOUT="15" /> <!-- 爬取网页的并发(连接)数 -->
        <TASKQ COUNT="10000" />         <!-- Undo任务队列配置 -->
    </WORKER>

    <!-- 分析进程: 负责对网页的分析(内容分析、URL提取等) -->
    <PARSER>
        <!-- 被解析网页的存储路径 -->
        <STORE PATH="../temp/parser/webpage" ERR_PATH="../temp/parser/error" />
        <DATABASE SERVER="服务名" USER="用户名" PASSWD="密码" />  <!-- 数据库配置 -->
    </PARSER>

    <!-- 种子配置(DEPTH: 表示种子的当前深度) -->
    <SEED>
        <ITEM URI="www.baidu.com" DEPTH="0" />
        <ITEM URI="www.ifeng.com" DEPTH="0" />
        <ITEM URI="www.qq.com" DEPTH="0" />
        <ITEM URI="www.163.com" DEPTH="0" />
        <ITEM URI="www.52rd.com" DEPTH="0" />
    </SEED>
</CRAWLER>
