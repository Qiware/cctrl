<!-- 爬虫系统配置信息 -->
<CRAWLER>
    <!-- 公共配置 -->
    <COMMON>
        <!-- 日志信息配置
             1) LOG_LEVLE: 日志级别
             2) LOG2_LEVEL: 系统日志级别
             3) 取值范围: trace|debug|info|warn|error|fatal -->
        <LOG LOG_LEVEL="warn" LOG2_LEVEL="error" PATH="../log/" />
        <!-- 爬取配置
             1) DEEP: 最大爬取深度
             2) PATH: 网页存储路径 -->
        <DOWNLOAD DEEP="3" PATH="../temp/crwl/webpage" />
        <!-- REDIS服务配置
             1) IPADDR: IP地址
             2) PORT: 端口号 -->
        <REDIS IPADDR="127.0.0.1" PORT="6379">
            <QUEUE UNDO_TASKQ="CRWL_UNDO_TASKQ" />  <!-- 队列配置 -->
            <HASH DONE_TAB="CRWL_DONE_TAB" />       <!-- 哈希表配置 -->
            <SLAVE>   <!-- 副本服务器 -->
                <ITEM IPADDR="127.0.0.1" PORT="6380" />
                <ITEM IPADDR="127.0.0.1" PORT="6381" />
            </SLAVE>
        </REDIS>
    </COMMON>

    <!-- 爬虫进程: 负责网页下载
         1) NUM: 线程数 -->
    <WORKER NUM="1">
        <CONNECTIONS MAX="64" TIMEOUT="30" /> <!-- 爬取网页的并发(连接)数 -->
        <TASKQ COUNT="10000" />         <!-- Undo任务队列配置 -->
    </WORKER>

    <!-- 分析进程: 负责对网页的分析(内容分析、URL提取等) -->
    <PARSER>
        <DATABASE SERVER="服务名" USER="用户名" PASSWD="密码" />  <!-- 数据库配置 -->
    </PARSER>
</CRAWLER>
