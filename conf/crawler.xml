<!-- 爬虫系统配置信息 -->
<CRAWLER>
    <!-- 公共配置 -->
    <COMMON>
        <!-- 日志信息配置
            1) LOG_LEVLE: 日志级别
            2) LOG2_LEVEL: 系统日志级别
            3) 取值范围: trace|debug|info|warn|error|fatal -->
        <LOG LOG_LEVEL="warn" LOG2_LEVEL="warn" PATH="../log/" />
        <POLICY>    <!-- 策略配置 -->
            <MAX_DEEP>3</MAX_DEEP>      <!-- 最大爬取深度 -->
            <SAVE_PATH>.</SAVE_PATH>    <!-- 下载存储路径 -->
        </POLICY>
        <REDIS IPADDR="127.0.0.1" PORT="6379">  <!-- REDIS配置 -->
            <UNDO_TASK_QUEUE NAME="CRWL_UNDO_TASKQ" />  <!-- UNDO任务队列 -->
        </REDIS>
    </COMMON>

    <!-- 控制进程: 负责爬虫的任务分发 -->
    <CONTROLER>
        <RECV_THREAD_NUM>1</RECV_THREAD_NUM>    <!-- 接收线程数 -->
        <DISP_THREAD_NUM>1</DISP_THREAD_NUM>    <!-- 分发线程数 -->
        <PORT>2222</PORT>                       <!-- 爬虫服务端口号 -->
    </CONTROLER>

    <!-- 爬虫进程: 负责网页下载 -->
    <WORKER>
        <THREAD_NUM>2</THREAD_NUM>  <!-- 爬虫线程数 -->
        <SVRIP>127.0.0.1</SVRIP>    <!-- 管理服务IP -->
        <PORT>2222</PORT>           <!-- 管理服务侦听端口 -->
        <DOWN_WEBPAGE_NUM>20</DOWN_WEBPAGE_NUM>  <!-- 同时爬取的网页数 -->
        <TASK_QUEUE>                <!-- 任务队列配置 -->
            <COUNT>10000</COUNT>        <!-- 队列单元数 -->
        </TASK_QUEUE>
    </WORKER>

    <!-- 分析进程: 负责对网页的分析(内容分析、URL提取等) -->
    <ANALYST>
        <PROCESS_NUM>1</PROCESS_NUM><!-- 分析进程数 -->
        <THREAD_NUM>5</THREAD_NUM>  <!-- 各分析进程中的线程数 -->
        <SVRIP>127.0.0.1</SVRIP>    <!-- 管理服务IP -->
        <PORT>2222</PORT>           <!-- 管理服务侦听端口 -->
        <DATABASE>  <!-- 数据库配置 -->
            <SVRNAME></SVRNAME>     <!-- 服务名 -->
            <USERNAME></USERNAME>   <!-- 登录名 -->
            <PASSWD></PASSWD>       <!-- 登陆密码 -->
        </DATABASE>
    </ANALYST>
</CRAWLER>
