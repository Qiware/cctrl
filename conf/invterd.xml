<!-- 倒排服务配置信息 -->
<INVTERD>
    <!-- 日志配置
        1) LEVLE: 日志级别(取值范围: trace|debug|info|warn|error|fatal) -->
    <LOG LEVEL="error" />

    <!-- 倒排表配置 -->
    <INVT_TAB MAX="1024" />

    <!-- SDTP服务配置 -->
    <SDTP NODE="30001" PORT="28888">
        <PATH>../temp/invertd/</PATH>                 <!-- 工作路径 -->
        <AUTH USR="qifeng" PASSWD="111111" />         <!-- 鉴权配置 -->
        <THDNUM RECV_THD_NUM="2" WORK_THD_NUM="4" />  <!-- 线程数据 -->
        <RECVQ NUM="4" MAX="8192" SIZE="4096" />      <!-- 接收队列(NUM:队列数 MAX:单元总数 SIZE:单元大小) -->
        <DISTQ NUM="4" MAX="8192" SIZE="4096" />      <!-- 分发队列(NUM:队列数 MAX:单元总数 SIZE:单元大小) -->
    </SDTP>
</INVTERD>
