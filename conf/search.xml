<!-- 搜索引擎配置信息 -->
<SEARCH-ENGINE>
    <!-- 日志信息配置
        1) LEVLE: 日志级别
        2) LEVEL2: 系统日志级别
        3) 取值范围: trace|debug|info|warn|error|fatal -->
    <LOG LEVEL="error" LEVEL2="error" PATH="../log/" />

    <!-- 并发(连接)配置
        1) MAX: 最大并发数(必须为2的次方)
        2) TIMEOUT: 连接超时时间
        3) PORT: 侦听端口 -->
    <CONNECTIONS MAX="1024" TIMEOUT="15" PORT="9002" />

    <!-- 队列配置
        1) MAX: 队列容量 
        2) SIZE: 队列单元大小(0:表示自定义) -->
    <QUEUE>
        <CONNQ MAX="1024" SIZE="0" />  <!-- 连接队列 -->
        <TASKQ MAX="1024" SIZE="2048" />   <!-- 任务队列 -->
    </QUEUE>

    <!-- Agent配置
        1) NUM: 线程数 -->
    <AGENT NUM="3" />
    <!-- Worker配置
        1) NUM: 线程数 -->
    <WORKER NUM="3" />
</SEARCH-ENGINE>
