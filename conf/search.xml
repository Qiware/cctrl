<!-- 搜索引擎系统配置信息 -->
<SEARCH>
  <LOG LEVEL="trace" /> <!-- 日志级别: trace|debug|info|warn|error|fatal -->
  <CRWLSYS> <!-- 爬虫系统配置 -->
      <COMMON>    <!-- 公共配置 -->
          <REDIS>  <!-- REDIS配置 -->
              <MASTER IPADDR="127.0.0.1" PORT="6379">
                  <SLAVE IPADDR="127.0.0.1" PORT="6380" />
                  <SLAVE IPADDR="127.0.0.1" PORT="6381" />
                  <SLAVE IPADDR="127.0.0.1" PORT="6382" />
              </MASTER>
              <MASTER IPADDR="127.0.0.1" PORT="6389">
                  <SLAVE IPADDR="127.0.0.1" PORT="6390" />
                  <SLAVE IPADDR="127.0.0.1" PORT="6391" />
                  <SLAVE IPADDR="127.0.0.1" PORT="6392" />
              </MASTER>
          </REDIS>
      </COMMON>
      <CONTROLER> <!-- 控制进程: 负责爬虫的任务分发 -->
          <RECV_THREAD_NUM>1</RECV_THREAD_NUM>    <!-- 接收线程数 -->
          <DISP_THREAD_NUM>1</DISP_THREAD_NUM>    <!-- 分发线程数 -->
          <PORT>2222</PORT>                 <!-- 爬虫服务端口号 -->
          <SEED>  <!-- 种子配置 -->
              <ITEM>www.ifeng.com</ITEM>
              <ITEM>www.sina.com.cn</ITEM>
          </SEED>
      </CONTROLER>
      <WORKER>    <!-- 爬虫进程: 负责网页下载 -->
          <THREAD_NUM>2</THREAD_NUM>  <!-- 爬虫进程中的线程数 -->
          <SVRIP>127.0.0.1</SVRIP>    <!-- 管理服务IP -->
          <PORT>2222</PORT>           <!-- 管理服务侦听端口 -->
          <LOAD_WEB_PAGE_NUM>20</LOAD_WEB_PAGE_NUM>  <!-- 同时爬取的网页数 -->
          <TASK_QUEUE>                <!-- 任务队列配置 -->
              <COUNT>10000</COUNT>    <!-- 队列单元数 -->
          </TASK_QUEUE>
      </WORKER>
      <ANALYST>   <!-- 分析进程: 负责对网页的分析(内容分析、URL提取等) -->
          <PROCESS_NUM>1</PROCESS_NUM><!-- 分析进程数 -->
          <THREAD_NUM>5</THREAD_NUM>  <!-- 各分析进程中的线程数 -->
          <SVRIP>127.0.0.1</SVRIP>    <!-- 管理服务IP -->
          <PORT>2222</PORT>           <!-- 管理服务侦听端口 -->
          <DATABASE>  <!-- 数据库配置 -->
              <SVRNAME></SVRNAME>     <!-- 服务名 -->
              <USERNAME></USERNAME>   <!-- 登录名 -->
              <PASSWD></PASSWD>       <!-- 登陆密码 -->
          </DATABASE>
      </ANALYST>
  </CRWLSYS>
</SEARCH>
